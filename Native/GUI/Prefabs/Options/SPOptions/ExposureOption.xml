<Prefab>
  <Window>
    <Widget Id="ExposureOptions" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Sprite="BlankWhiteSquare_9" Color="#000000FF" IsVisible="@Visible">
      <Children>

        <ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="VerticalBottomToTop" MarginTop="40">
          <Children>

            <TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" ClipContents="false" Text="@TitleText" Brush="SPOptions.Exposure.Title.Text" HorizontalAlignment="Center"/>
            <TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" ClipContents="false" Text="@ExplanationText" Brush="SPOptions.Exposure.Explanation.Text" HorizontalAlignment="Center" MarginTop="35"/>
          </Children>
        </ListPanel>

        <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center" MarginTop="80" StackLayout.LayoutMethod="VerticalBottomToTop">
          <Children>

            <ExposureOptionsList VerticalAlignment="Center" HorizontalAlignment="Center" MarginTop="10"/>

            <!--Brightness Value Slider-->
						<NavigationForcedScopeCollectionTargeter CollectionParent="..\." />
            <NavigationScopeTargeter ScopeParent="..\ExposureSlider" ScopeID="ExposureOptionScope" ScopeMovements="Vertical,Horizontal" IsDefaultNavigationWidget="true" HasCircularMovement="true" />
            <Widget Id="ExposureSlider" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="367" SuggestedHeight="42" HorizontalAlignment="Center" VerticalAlignment="Bottom" MarginTop="60" MarginLeft="25">
              <Children>
                <SliderWidget Id="ScrollBar" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="338" SuggestedHeight="42" VerticalAlignment="Center" Filler="Filler" Handle="SliderHandle" MaxValueFloat="3.0" MinValueFloat="-3.0" ValueFloat="@Value">
                  <Children>
                    <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="362" SuggestedHeight="38" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_canvas" IsEnabled="false" />
                    <Widget Id="Filler" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="345" SuggestedHeight="35" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_fill" ClipContents="true">
                      <Children>
                        <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="345" SuggestedHeight="35" HorizontalAlignment="Left" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_fill" />
                      </Children>
                    </Widget>
                    <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="400" SuggestedHeight="65" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_frame" IsEnabled="false" />
                    <ImageWidget Id="SliderHandle" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="14" SuggestedHeight="38" HorizontalAlignment="Left" VerticalAlignment="Center" Brush="SPOptions.Slider.Handle" DoNotAcceptEvents="true" GamepadNavigationIndex="0"/>
                  </Children>
                </SliderWidget>
              </Children>
            </Widget>
          </Children>
        </ListPanel>
        
        <Standard.DialogCloseButtons Parameter.CancelButtonAction="ExecuteCancel" Parameter.CancelButtonText="@CancelText" Parameter.DoneButtonAction="ExecuteConfirm" Parameter.DoneButtonText="@AcceptText" Parameter.DoneInputKeyDataSource="{ConfirmInputKey}" Parameter.CancelInputKeyDataSource="{CancelInputKey}" />
      
      </Children>
    </Widget>
  </Window>
</Prefab>