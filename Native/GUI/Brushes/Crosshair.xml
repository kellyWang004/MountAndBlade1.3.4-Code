<Brushes>
  <Brush Name="Crosshair.Top">
    <Layers>
      <BrushLayer Name="Default" Sprite="General\Crosshair\crosshair" />
    </Layers>
    <Styles>
      <Style Name="Default" />
      <Style Name="Invalid">
        <StyleLayer Name="Default" Color="#FF0000AA" />
      </Style>
    </Styles>
  </Brush>
  <Brush Name="Crosshair.Bottom">
    <Layers>
      <BrushLayer Name="Default" Sprite="General\Crosshair\crosshair" VerticalFlip="true" />
    </Layers>
    <Styles>
      <Style Name="Default" />
      <Style Name="Invalid">
        <StyleLayer Name="Default" Color="#FF0000AA" />
      </Style>
    </Styles>
  </Brush>
  <Brush Name="Crosshair.Right">
    <Layers>
      <BrushLayer Name="Default" Sprite="General\Crosshair\crosshair_angled_right" />
    </Layers>
    <Styles>
      <Style Name="Default" />
      <Style Name="Invalid">
        <StyleLayer Name="Default" Color="#FF0000AA" />
      </Style>
    </Styles>
  </Brush>
  <Brush Name="Crosshair.Left">
    <Layers>
      <BrushLayer Name="Default" Sprite="General\Crosshair\crosshair_angled_right" HorizontalFlip="true" />
    </Layers>
    <Styles>
      <Style Name="Default" />
      <Style Name="Invalid">
        <StyleLayer Name="Default" Color="#FF0000AA" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="Crosshair.Left.Square">
    <Layers>
      <BrushLayer Name="Default" Sprite="General\Crosshair\crosshair_rotated" HorizontalFlip="true" />
    </Layers>
    <Styles>
      <Style Name="Default" />
      <Style Name="Invalid">
        <StyleLayer Name="Default" Color="#FF0000AA" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="Crosshair.Right.Square">
    <Layers>
      <BrushLayer Name="Default" Sprite="General\Crosshair\crosshair_rotated" />
    </Layers>
    <Styles>
      <Style Name="Default" />
      <Style Name="Invalid">
        <StyleLayer Name="Default" Color="#FF0000AA" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="Crosshair.HitMarker">
    <Layers>
      <BrushLayer Name="Default" Sprite="General\Crosshair\crosshair_hitmarker" Color="#FFFFFFAA" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="0.0" />
      </Style>
      <Style Name="Show" AnimationToPlayOnBegin="ShowAnimation">
        <BrushLayer Name="Default" Color="#FFFFFFAA" AlphaFactor="0.0" />
      </Style>
      <Style Name="ShowDeath" AnimationToPlayOnBegin="ShowDeathAnimation">
        <BrushLayer Name="Default" Color="#FF1111AA" AlphaFactor="0.0" />
      </Style>
    </Styles>
    <Animations>
      <Animation Name="ShowAnimation" Duration="0.375" Loop="false">
        <AnimationProperty LayerName="Default" PropertyName="AlphaFactor">
          <KeyFrame Time="0.0" Value="0.0" />
          <KeyFrame Time="0.01" Value="1.0" />
          <KeyFrame Time="0.25" Value="1.0" />
          <KeyFrame Time="0.375" Value="0.0" />
        </AnimationProperty>
        <AnimationProperty LayerName="Default" PropertyName="Color">
          <KeyFrame Time="0" Value="#FFFFFFAA" />
        </AnimationProperty>
      </Animation>
      <Animation Name="ShowDeathAnimation" Duration="0.375" Loop="false">
        <AnimationProperty LayerName="Default" PropertyName="AlphaFactor">
          <KeyFrame Time="0.0" Value="0.0" />
          <KeyFrame Time="0.01" Value="1.0" />
          <KeyFrame Time="0.25" Value="1.0" />
          <KeyFrame Time="0.375" Value="0.0" />
        </AnimationProperty>
        <AnimationProperty LayerName="Default" PropertyName="Color">
          <KeyFrame Time="0" Value="#FF1111AA" />
        </AnimationProperty>
      </Animation>
    </Animations>
  </Brush>

  <Brush Name="Crosshair.HeadshotMarker">
    <Layers>
      <BrushLayer Name="Default" Sprite="MapMenuUnread@2x" Color="#FF0000AA" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" AlphaFactor="0.0" />
      </Style>
      <Style Name="Show" AnimationToPlayOnBegin="ShowAnimation">
        <BrushLayer Name="Default" Color="#FF0000AA" AlphaFactor="0.0" />
      </Style>
    </Styles>
    <Animations>
      <Animation Name="ShowAnimation" Duration="0.375" Loop="false">
        <AnimationProperty LayerName="Default" PropertyName="AlphaFactor">
          <KeyFrame Time="0.0" Value="0.0" />
          <KeyFrame Time="0.01" Value="1.0" />
          <KeyFrame Time="0.25" Value="1.0" />
          <KeyFrame Time="0.375" Value="0.0" />
        </AnimationProperty>
        <AnimationProperty LayerName="Default" PropertyName="Color">
          <KeyFrame Time="0" Value="#FF0000AA" />
        </AnimationProperty>
      </Animation>
    </Animations>
  </Brush>

</Brushes>