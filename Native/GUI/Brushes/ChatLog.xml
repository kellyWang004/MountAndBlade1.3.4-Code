<Brushes>
  <Brush Name="ChatLog.Text" Font="Galahad" TextHorizontalAlignment="Center">
    <Layers>
    </Layers>
    <Styles>
      <Style Name="Default" FontColor="#FAF4DEFF" TextGlowColor="#000000FF" TextOutlineColor="#000000CC" TextOutlineAmount="0.1" TextGlowRadius="0" TextBlur="1" FontSize="20" />
      <Style Name="HeadshotTitle.Text" FontColor="#FF00FFFF" TextGlowColor="#111111FF" TextBlur="0" />
      <Style Name="HeadshotTitle.Text.MouseOver" FontColor="#FF00FFFF" TextGlowColor="#111111FF" TextBlur="0" />
      <Style Name="HeadshotTitle.Text.MouseDown" FontColor="#FF00FFFF" TextGlowColor="#111111FF" TextBlur="0" />
    </Styles>
  </Brush>
  
  <Brush Name="ChatLog.HideShowText" Font="FiraSansExtraCondensed-Regular" FontSize="16" TextHorizontalAlignment="Center">
    <Layers>
    </Layers>
    <Styles>
      <Style Name="Default" FontColor="#DDDDDDFF" TextGlowColor="#000000FF" TextOutlineColor="#000000FF" TextOutlineAmount="0.7" TextGlowRadius="0" TextBlur="0" />
    </Styles>
  </Brush>
  
    <Brush Name="ChatLog.TabText" Font="FiraSansExtraCondensed-Regular" FontSize="18" TextVerticalAlignment="Center" TextHorizontalAlignment="Center">
    <Layers>
    </Layers>
    <Styles>
      <Style Name="Default" FontColor="#DDDDDDFF" TextGlowColor="#000000FF" TextOutlineColor="#000000FF" TextOutlineAmount="0.7" TextGlowRadius="0" TextBlur="0" />
    </Styles>
  </Brush>

  <Brush Name="SPChatlog.CombatLogButton">
    <Layers>
      <BrushLayer Name="Default" Sprite="General\RadialMenu\radial_menu_item_background" ExtendLeft="8" ExtendTop="8" ExtendBottom="8" ExtendRight="8"/>
      <BrushLayer Name="SwordUnSelected" Sprite="General\TroopTypeIcons\icon_troop_type_infantry"  SaturationFactor="-100" IsHidden="true"/>
      <BrushLayer Name="SwordSelected" Sprite="General\TroopTypeIcons\icon_troop_type_infantry" Color="#00FF00FF" IsHidden="true"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" ColorFactor="0.8" />
        <BrushLayer Name="SwordUnSelected" IsHidden="false"/>
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.1" />
        <BrushLayer Name="SwordUnSelected" ColorFactor="1.1" IsHidden="false"/>
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.6" />
        <BrushLayer Name="SwordUnSelected" ColorFactor="0.6" IsHidden="false"/>
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" ColorFactor="1.3" Color="#00FF00FF" />
        <BrushLayer Name="SwordSelected" IsHidden="false"/>
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" AlphaFactor="0.5" />
        <BrushLayer Name="SwordUnSelected" AlphaFactor="0.5" IsHidden="false"/>
      </Style>
    </Styles>
  </Brush>
  
  <Brush Name="SPChatlog.Checkbox.CombatLog">
    <Layers>
      <BrushLayer Name="Default" Sprite="StdAssets\filters_checkbox" IsHidden="false" />
      <BrushLayer Name="Selected" Sprite="StdAssets\filters_checkbox_full" IsHidden="true" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.8" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.2" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" ColorFactor="0.1" />
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" ColorFactor="1.1" IsHidden="true"/>
        <BrushLayer Name="Selected" ColorFactor="1.1" IsHidden="false"/>
      </Style>
    </Styles>
    <SoundProperties>
      <EventSounds>
        <EventSound EventName="Click" Audio="checkbox" />
      </EventSounds>
    </SoundProperties>
  </Brush>
  
  <Brush Name="SPChatlog.Resizer">
    <Layers>
      <BrushLayer Name="Default" Sprite="MPGeneral\MPChat\resize_button" Color="#A96A16FF" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" ColorFactor="1.2" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.4" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.7" />
      </Style>
    </Styles>
  </Brush>
  
  <Brush Name="SPChatlog.Scrollbar.Handle">
    <Layers>
      <BrushLayer Name="Default" Sprite="project_popup_progress_fill_9" Color="#EDB495FF" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default"  />
      </Style>
    </Styles>
  </Brush>
  
</Brushes>