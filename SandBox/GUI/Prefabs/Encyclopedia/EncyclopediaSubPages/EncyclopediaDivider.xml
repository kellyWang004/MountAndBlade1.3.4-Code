<Prefab>
  <Parameters>
    <Parameter Name="Title" DefaultValue="title" />
    <Parameter Name="ItemList" DefaultValue=".." />
  </Parameters>
  <Constants>
  </Constants>
  <Window>
    <!--Divider Widget-->
    <EncyclopediaDividerButtonWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" CollapseIndicator="PlacementListPanel\CollapseIndicator" ItemListWidget="*ItemList" UpdateChildrenStates="true" DoNotPassEventsToChildren="true" ExtendCursorAreaLeft="5" ExtendCursorAreaRight="5" ExtendCursorAreaTop="5" ExtendCursorAreaBottom="5" ExtendDiscoveryAreaBottom="-5" GamepadNavigationIndex="0" >
      <Children>

        <NavigationScopeTargeter ScopeID="EncyclopediaDividerScope" ScopeParent="..\." NavigateFromScopeEdges="true" UseDiscoveryAreaAsScopeEdges="true" />
        <NavigationAutoScrollWidget TrackedWidget="..\." AutoScrollTopOffset="35" AutoScrollBottomOffset="35" />

        <ListPanel Id="PlacementListPanel" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" UpdateChildrenStates="true">
          <Children>

            <!--Collapse Indicator Widget-->
            <BrushWidget Id="CollapseIndicator" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="19" SuggestedWidth="19" VerticalAlignment="Center" PositionYOffset="-3" Brush="SPOptions.GameKeysgroup.ExpandIndicator" OverrideDefaultStateSwitchingEnabled="true" />

            <!--Header Text-->
            <TextWidget Id="Text" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Brush="Encyclopedia.SubPage.Header.Text" Text="*Title" MarginLeft="10"/>

            <!--Divider-->
            <ImageWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="2" VerticalAlignment="Center" HorizontalAlignment="Left" MarginLeft="15" Brush="SPOptions.CollapserLine" />

          </Children>
        </ListPanel>

      </Children>
    </EncyclopediaDividerButtonWidget>
  </Window>
</Prefab>
