<Prefab>
  <Constants>
    <Constant Name="Refinement.Tuple.Width" BrushLayer="Default" BrushName="Refinement.Tuple" BrushValueType="Width" />
    <Constant Name="Refinement.Tuple.Height" BrushLayer="Default" BrushName="Refinement.Tuple" BrushValueType="Height"/>

    <Constant Name="Smelting.Sort.Type.Button.Width" BrushLayer="Default" BrushName="Smelting.Sort.Type.Button" BrushValueType="Width" />
    <Constant Name="Smelting.Sort.Type.Button.Height" BrushLayer="Default" BrushName="Smelting.Sort.Type.Button" BrushValueType="Height" />

    <Constant Name="Smelting.Sort.Name.Button.Width" BrushLayer="Default" BrushName="Smelting.Sort.Name.Button" BrushValueType="Width" />
    <Constant Name="Smelting.Sort.Name.Button.Height" BrushLayer="Default" BrushName="Smelting.Sort.Name.Button" BrushValueType="Height" />

    <Constant Name="Smelting.Sort.Cost.Button.Width" BrushLayer="Default" BrushName="Smelting.Sort.Cost.Button" BrushValueType="Width" />
    <Constant Name="Smelting.Sort.Cost.Button.Height" BrushLayer="Default" BrushName="Smelting.Sort.Cost.Button" BrushValueType="Height" />

    <Constant Name="SelectAllButton.Width" BrushLayer="Default" BrushName="ButtonRightDoubleArrowBrush1" BrushValueType="Width" />
    <Constant Name="SelectAllButton.Height" BrushLayer="Default" BrushName="ButtonRightDoubleArrowBrush1" BrushValueType="Height" />
  </Constants>
  <Variables>
  </Variables>
  <VisualDefinitions>
  </VisualDefinitions>
  <Window>
    <Widget Id="RefinementCategoryParent" DoNotAcceptEvents="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent">
      <Children>

        <Widget Id="InnerPanel" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="585" SuggestedHeight="770" HorizontalAlignment="Center" VerticalAlignment="Center" MarginTop="10" PositionXOffset="16" PositionYOffset="24">
          <Children>

            <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="575" SuggestedHeight="51" HorizontalAlignment="Left" Sprite="Crafting\refine_panel_header" >
              <Children>
                <TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="Refinement.Tuple.Text" Text="@RefinementText" />
              </Children>
            </Widget>

            <ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" StackLayout.LayoutMethod="HorizontalLeftToRight" MarginLeft="6" MarginTop="48">
              <Children>

                <ScrollablePanel WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Left" VerticalAlignment="Top" AutoHideScrollBars="true" ClipRect="ClipRect" InnerPanel="ClipRect\RefinementActionsList" VerticalScrollbar="..\..\VerticalScrollbar">
                  <Children>
                    
                    <NavigationScopeTargeter ScopeID="RefinementScope" ScopeParent="..\ClipRect" ScopeMovements="Vertical" HasCircularMovement="true" />
                    <Widget Id="ClipRect" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" ClipContents="true">
                      <Children>

                        <NavigatableListPanel Id="RefinementActionsList" DataSource="{AvailableRefinementActions}" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="VerticalBottomToTop" MarginBottom="40">
                          <ItemTemplate>

                            <ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Refinement.Tuple.Width" SuggestedHeight="!Refinement.Tuple.Height" Brush="Refinement.Tuple" Command.Click="ExecuteSelectAction" IsSelected="@IsSelected" IsEnabled="@IsEnabled" UpdateChildrenStates="true" MarginBottom="0" DoNotUseCustomScaleAndChildren="true">
                              <Children>

                                <ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Center" MarginLeft="15" MarginRight="15">
                                  <Children>

                                    <ListPanel DataSource="{InputMaterials}" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="HorizontalRightToLeft" VerticalAlignment="Center">
                                      <ItemTemplate>
                                        <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="VerticalBottomToTop">
                                          <Children>
                                            <CraftingMaterialVisualBrushWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="75" SuggestedHeight="55" HorizontalAlignment="Center" Brush="Crafting.Material.Brush" MaterialType="@ResourceMaterialTypeAsStr" />
                                            <TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Brush="Refinement.Amount.Text" HorizontalAlignment="Center" VerticalAlignment="Center" MarginTop="5" IntText="@ResourceAmount" IsEnabled="@IsResourceAvailable" />
                                            <TextWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="100" SuggestedHeight="25" HorizontalAlignment="Center" VerticalAlignment="Bottom" Brush="Refinement.Tuple.Text" Text="@ResourceName" IsEnabled="@IsResourceAvailable"/>
                                          </Children>
                                        </ListPanel>
                                      </ItemTemplate>
                                    </ListPanel>

                                    <Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="57" SuggestedHeight="17" VerticalAlignment="Center" MarginLeft="15" MarginRight="15" Sprite="Crafting\arrow" />

                                    <ListPanel DataSource="{OutputMaterials}" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center">
                                      <ItemTemplate>
                                        <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="VerticalBottomToTop">
                                          <Children>
                                            <CraftingMaterialVisualBrushWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="75" SuggestedHeight="55" HorizontalAlignment="Center" Brush="Crafting.Material.Brush" MaterialType="@ResourceMaterialTypeAsStr" />
                                            <TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Brush="Refinement.Amount.Text" HorizontalAlignment="Center" VerticalAlignment="Center" MarginTop="5" IntText="@ResourceAmount" />
                                            <TextWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="100" SuggestedHeight="25" HorizontalAlignment="Center" VerticalAlignment="Bottom" Brush="Refinement.Tuple.Text" Text="@ResourceName"/>
                                          </Children>
                                        </ListPanel>
                                      </ItemTemplate>
                                    </ListPanel>

                                  </Children>
                                </ListPanel>

                              </Children>
                            </ButtonWidget>

                          </ItemTemplate>
                        </NavigatableListPanel>

                        <!--Scroll Gradient-->
                        <Widget DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="576" SuggestedHeight="57" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsEnabled="false" Sprite="General\CharacterCreation\character_creation_scroll_gradient" />
                      </Children>
                    </Widget>
                  </Children>
                </ScrollablePanel>

              </Children>
            </ListPanel>

            <ScrollbarWidget Id="VerticalScrollbar" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="8" HorizontalAlignment="Right" VerticalAlignment="Bottom" MarginTop="7" MarginBottom="7" AlignmentAxis="Vertical" Handle="VerticalScrollbarHandle" MaxValue="100" MinValue="0">
              <Children>
                <Widget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="4" HorizontalAlignment="Center" Sprite="BlankWhiteSquare_9" AlphaFactor="0.2" Color="#5A4033FF" />
                <ImageWidget Id="VerticalScrollbarHandle" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="8" SuggestedHeight="10" HorizontalAlignment="Center" Brush="FaceGen.Scrollbar.Handle" />
              </Children>
            </ScrollbarWidget>

          </Children>
        </Widget>

      </Children>
    </Widget>
  </Window>
</Prefab>