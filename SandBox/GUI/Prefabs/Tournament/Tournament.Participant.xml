      <VisualState State = "Dead" SuggestedHeight="0"/>
      <VisualState State = "Default" SuggestedHeight="30"/>
      <VisualState State = "Current" SuggestedHeight="30"/>
      <VisualState State = "Over" SuggestedHeight="30"/>
