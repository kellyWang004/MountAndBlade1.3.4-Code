                <TextWidget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="25" HorizontalAlignment="Right" Text="@Score" Brush="Tournament.Participant.Text" Brush.TextHorizontalAlignment="Center"/>
