            </Widget>
            <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="30" IsHidden="@IsValid" />
          </Children>
        </TournamentParticipantBrushWidget>
      </Children>
    </Widget>
  </Window>
</Prefab>