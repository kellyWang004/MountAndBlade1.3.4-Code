<Prefab>

	<Constants>

		<Constant Name="Banner.Width" BrushLayer="Default" BrushName="Flat.Tuple.Banner.Small" BrushValueType="Width" />
		<Constant Name="Banner.Height" BrushLayer="Default" BrushName="Flat.Tuple.Banner.Small" BrushValueType="Height" />

		<Constant Name="Banner.Width.Scaled" MultiplyResult="0.30" Value="!Banner.Width" />
		<Constant Name="Banner.Height.Scaled" MultiplyResult="0.38" Value="!Banner.Height" />

		<Constant Name="Stat.Width" Value="175" />
		<Constant Name="Stat.Height" Value="50" />

		<Constant Name="Stat.Name.Height" Value="100" />
		<Constant Name="Stat.Bar.HorizontalMargin" Value="10" />

	</Constants>

	<Window>
		<ValueBasedVisibilityWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Sprite="SPGeneral\background_illustration_policies">
			<Children>

				<!--Background Image Tint-->
				<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Sprite="BlankWhiteSquare_9" Color="#00000090" />

				<ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="VerticalBottomToTop">
					<Children>
						<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center" MarginTop="20" Brush="Kingdom.DecisionTitleBig.Text" Text="@NameText" ClipContents="false"/>
						<TextWidget WidthSizePolicy="Fixed" HeightSizePolicy="CoverChildren" SuggestedWidth="400" HorizontalAlignment="Center" VerticalAlignment="Center" MarginTop="20" Brush="Kingdom.DecisionParagraph.Text"  Text="@ProposeCallToWarAgreementDescriptionText"/>


						<!--Banners-->
						<ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" MarginTop="15" MarginLeft="45" MarginRight="45" StackLayout.LayoutMethod="HorizontalSpaced">
							<Children>

								<!--Source Faction Banner-->
								<MaskedTextureWidget DataSource="{SourceFactionBanner}" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="105" SuggestedHeight="126" Brush="Kingdom.TornBanner" AdditionalArgs="@AdditionalArgs" ImageId="@Id" TextureProviderName="@TextureProviderName"  />

								<!--War Icon-->
								<Widget DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="63" SuggestedHeight="63" VerticalAlignment="Center" Sprite="SPKingdom\Diplomacy\diplomacy_war_icon" />

								<!--Target Faction Banner-->
								<MaskedTextureWidget DataSource="{TargetFactionBanner}" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="105" SuggestedHeight="126" Brush="Kingdom.TornBanner" AdditionalArgs="@AdditionalArgs" ImageId="@Id" TextureProviderName="@TextureProviderName"  />

							</Children>
						</ListPanel>

            <!--Target Faction Other Wars-->
            <Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedHeight="40" HorizontalAlignment="Center" VerticalAlignment="Top" PositionXOffset="136.5">
              <Children>
                <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" StackLayout.LayoutMethod="VerticalBottomToTop" IsVisible="@IsTargetFactionOtherWarsVisible">
                  <Children>
                    <Widget DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Center" Sprite="SPKingdom\Diplomacy\diplomacy_war_icon" IsEnabled="false"/>
                    <GridWidget DataSource="{TargetFactionOtherWars}" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" MarginTop="3" DefaultCellWidth="17" DefaultCellHeight="21" ColumnCount="7" LayoutImp.HorizontalLayoutMethod="Center">
                      <ItemTemplate>
                        <Widget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren">
                          <Children>
                            <Widget DataSource="{Hint}" DoNotPassEventsToChildren="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint">
                              <Children>
                                <MaskedTextureWidget DataSource="{..\Visual}" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="14" SuggestedHeight="18" HorizontalAlignment="Right" VerticalAlignment="Top" Brush="Kingdom.OtherWars.Faction.Small.Banner" AdditionalArgs="@AdditionalArgs" ImageId="@Id" TextureProviderName="@TextureProviderName" IsDisabled="true"  />
                              </Children>
                            </Widget>
                          </Children>
                        </Widget>
                      </ItemTemplate>
                    </GridWidget>
                  </Children>
                </ListPanel>
              </Children>
            </Widget>

						<!--Leaders Title-->
						<TextWidget DoNotAcceptEvents="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center" MarginTop="-10" Brush="Kingdom.DecisionTitleMedium.Text" Text="@LeaderText" ClipContents="false"/>

						<!--Leaders-->
						<ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" MarginTop="5" MarginLeft="45" MarginRight="45" StackLayout.LayoutMethod="HorizontalSpaced">
							<Children>

								<!--Source Faction Leader-->
								<Widget DataSource="{SourceFactionLeader}" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="100" SuggestedHeight="70">
									<Children>
										<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="Encyclopedia.NoAudioButton" Command.Click="ExecuteLink" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" HoveredCursorState="RightClickLink">
											<Children>
												<!--Banner-->
												<MaskedTextureWidget DataSource="{ClanBanner_9}" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Banner.Width.Scaled" SuggestedHeight="!Banner.Height.Scaled" HorizontalAlignment="Right" VerticalAlignment="Top" MarginTop="0" Brush="Flat.Tuple.Banner.Small.Hero" AdditionalArgs="@AdditionalArgs" ImageId="@Id" TextureProviderName="@TextureProviderName" IsDisabled="true"  />
												<!--Face-->
												<ImageIdentifierWidget DataSource="{ImageIdentifier}" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" AdditionalArgs="@AdditionalArgs" ImageId="@Id" TextureProviderName="@TextureProviderName" />
											</Children>
										</ButtonWidget>

										<!--Name-->
										<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="24" VerticalAlignment="Bottom" PositionYOffset="30" Brush="Kingdom.DecisionParagraph.Text" Text="@NameText" />

									</Children>
								</Widget>

								<!--Target Faction Leader-->
								<Widget DataSource="{TargetFactionLeader}" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="100" SuggestedHeight="70">
									<Children>
										<ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Brush="Encyclopedia.NoAudioButton" Command.Click="ExecuteLink" Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" HoveredCursorState="RightClickLink">
											<Children>
												<!--Banner-->
												<MaskedTextureWidget DataSource="{ClanBanner_9}" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="!Banner.Width.Scaled" SuggestedHeight="!Banner.Height.Scaled" HorizontalAlignment="Right" VerticalAlignment="Top" MarginTop="0" Brush="Flat.Tuple.Banner.Small.Hero" AdditionalArgs="@AdditionalArgs" ImageId="@Id" TextureProviderName="@TextureProviderName" IsDisabled="true"  />
												<!--Face-->
												<ImageIdentifierWidget DataSource="{ImageIdentifier}" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" AdditionalArgs="@AdditionalArgs" ImageId="@Id" TextureProviderName="@TextureProviderName" />
											</Children>
										</ButtonWidget>

										<!--Name-->
										<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="24" VerticalAlignment="Bottom" PositionYOffset="30" Brush="Kingdom.DecisionParagraph.Text" Text="@NameText" />

									</Children>
								</Widget>

							</Children>
						</ListPanel>

						<!--Compared Stats-->
						<ListPanel DataSource="{ComparedStats}" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" MarginTop="15" StackLayout.LayoutMethod="VerticalBottomToTop">
							<ItemTemplate>
								<ListPanel WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" MarginTop="15" StackLayout.LayoutMethod="VerticalBottomToTop">
									<Children>
										<!--Stat Name-->
										<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Center" MarginBottom="5" Brush="Kingdom.DecisionTitleMedium.Text" Text="@Name" ClipContents="false"/>

										<!--Comparing Bars-->
										<ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedHeight="!Stat.Height" HorizontalAlignment="Center" MarginLeft="10" MarginRight="10">
											<Children>

												<!--Source Faction-->
												<FillBarHorizontalWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="140" SuggestedHeight="35" HorizontalAlignment="Center" Sprite="BlankWhiteSquare_9" Color="#00000040" FillWidget="FillWidget" InitialAmount="@Faction1Percentage" IsDirectionUpward="false" MaxAmount="100">
													<Children>
														<Widget Id="FillWidget" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" Sprite="BlankWhiteSquare_9" AlphaFactor="0.5" Color="@Faction1Color">
															<Children>
																<TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" PositionXOffset="-60" MarginTop="5" Brush="Kingdom.Wars.Stat.Value.Text" ClipContents="false" IntText="@Faction1Value" />
															</Children>
														</Widget>
													</Children>
												</FillBarHorizontalWidget>

												<!--Seprator-->
												<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="2" SuggestedHeight="35" Sprite="SPKingdom\Diplomacy\bar_seperator" />

												<!--Target Faction -->
												<FillBarHorizontalWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="140" SuggestedHeight="35" HorizontalAlignment="Center" Sprite="BlankWhiteSquare_9" Color="#00000040" FillWidget="FillWidget" InitialAmount="@Faction2Percentage" IsDirectionRightward="true" MaxAmount="100">
													<Children>
														<Widget Id="FillWidget" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" Sprite="BlankWhiteSquare_9" AlphaFactor="0.5" Color="@Faction2Color">
															<Children>
																<TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Right" VerticalAlignment="Center" PositionXOffset="60" MarginTop="5" Brush="Kingdom.Wars.Stat.Value.Text" ClipContents="false" IntText="@Faction2Value" />
															</Children>
														</Widget>
													</Children>
												</FillBarHorizontalWidget>

											</Children>
										</ListPanel>
									</Children>
								</ListPanel>

							</ItemTemplate>
						</ListPanel>

					</Children>
				</ListPanel>

			</Children>
		</ValueBasedVisibilityWidget>
	</Window>
</Prefab>
