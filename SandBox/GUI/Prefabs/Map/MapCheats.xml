<Prefab>
  <Window>

    <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Sprite="BlankWhiteSquare_9" Color="#000000AA">
      <Children>

        <!--Close Button-->
        <Standard.PopupCloseButton HorizontalAlignment="Center" VerticalAlignment="Center" Parameter.ButtonAction="ExecuteClose" PositionYOffset="475" Parameter.ButtonText="@ButtonCloseLabel" Parameter.InputKeyDataSource="{CloseInputKey}" />
        
        <!--Map Cheats-->
        <Widget Id="MapCheatsParent" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="750" SuggestedHeight="900" HorizontalAlignment="Center" VerticalAlignment="Center">
          <Children>

            <!--Canvas-->
            <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="StdAssets\Popup\canvas" DoNotAcceptEvents="true" />

            <!--Canvas Gradient-->
            <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="StdAssets\Popup\canvas_gradient" DoNotAcceptEvents="true" />

            <!--Frame Border-->
            <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="frame_9" ExtendLeft="18" ExtendTop="18" ExtendRight="18" ExtendBottom="18" DoNotAcceptEvents="true" />

            <!--Title-->
            <TextWidget WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedHeight="50" HorizontalAlignment="Center" VerticalAlignment="Top" MarginTop="30" Brush="Info.Text" Brush.FontSize="30" Text="@Title" DoNotAcceptEvents="true" />

            <ListPanel DoNotAcceptEvents="true"  WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Sprite="scrollable_field_9" MarginTop="85" MarginBottom="30" MarginLeft="10" MarginRight="10">
              <Children>
                <!--Cheats Scrollable Panel-->
                <ScrollablePanel Id="ScrollablePanel" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" AutoHideScrollBars="true" ClipRect="CheatsClipRect" InnerPanel="CheatsClipRect\CheatsGrid" VerticalScrollbar="..\VerticalScrollbar">
                  <Children>

                    <!--Cheats ClipRect-->
                    <Widget Id="CheatsClipRect" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" MarginTop="5" MarginBottom="5" MarginLeft="10" MarginRight="10" ClipContents="true" >
                      <Children>

                        <!--Cheats Grid-->
                        <NavigationScopeTargeter ScopeID="CheatsGridScope" ScopeParent="..\CheatsGrid" ScopeMovements="Horizontal" AlternateScopeMovements="Vertical" AlternateMovementStepSize="3" ForceGainNavigationOnClosestChild="true"/>
                        <NavigatableGridWidget Id="CheatsGrid" DataSource="{Cheats}" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Top" DefaultCellWidth="233" DefaultCellHeight="133" ColumnCount="3">
                          <ItemTemplate>
                            <ButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="222" SuggestedHeight="122" VerticalAlignment="Center" HorizontalAlignment="Center" Brush="Crafting.Order.Card" DoNotPassEventsToChildren="true" Command.Click="ExecuteAction">
                              <Children>
                                <TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" MarginLeft="5" MarginRight="5" MaxHeight="120" Text="@Name" Brush.FontSize="20" />
                              </Children>
                            </ButtonWidget>
                          </ItemTemplate>
                        </NavigatableGridWidget>

                      </Children>
                    </Widget>

                  </Children>
                </ScrollablePanel>

                <!--Scrollbar-->
                <ScrollbarWidget Id="VerticalScrollbar" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="8" HorizontalAlignment="Right" VerticalAlignment="Top" MarginRight="12" MarginTop="25" MarginBottom="25" AlignmentAxis="Vertical" Handle="VerticalScrollbarHandle" MaxValue="100" MinValue="0" >
                  <Children>
                    <Widget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="4" HorizontalAlignment="Center" Sprite="BlankWhiteSquare_9" Color="#5a4033FF" AlphaFactor="0.2" />
                    <ImageWidget Id="VerticalScrollbarHandle" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="10" SuggestedWidth="8" HorizontalAlignment="Center" Brush="FaceGen.Scrollbar.Handle" />
                  </Children>
                </ScrollbarWidget>
              </Children>
            </ListPanel>


          </Children>
        </Widget>

      </Children>
    </Widget>

  </Window>
</Prefab>